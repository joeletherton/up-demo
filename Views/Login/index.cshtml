@model SuperUsefulLogin.Models.LoginModel

@{
    ViewBag.Title = "Little Pigs, Little Pigs, Let Me In";
    Layout = "~/Views/Shared/_layoutView.cshtml";
}

@*We'll keep the dialog scripts in their own separate files.
Oh, and we'll be keeping the AJAX function there as well. 
Normally, the AJAX calls would be a little more modular and
have their own file devoted to them for larger projects,
but this project is a bit of a baby so why bother?*@
<script src="@Url.Content("~/Scripts/DialogScripts.js")" type="text/javascript"></script>

@*Ok, the document is ready, let's initiliaze*@
<script type="text/javascript">
    $(function () {
        console.log('initializing');
        wObjs.Init();
    });
</script>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "credentialsForm" })) {
    <div>
        <div class="letMeIn">

            <h1>Little Pigs, Little Pigs</h1>
            <br />

            <h2>User Name</h2>
            <div class="editor-field">
                @Html.EditorFor(model => model.UserName)
            </div>

            <h2>Password</h2>
            <div class="editor-field">
                @Html.EditorFor(model => model.Password)
            </div>

            <br /><br />

            @*We'll also keep the dialog itself in it's own template*@
            @Html.Partial("_dialog")

            <p style="text-align: center;margin: 0 auto;padding: 0 auto;">
                <input type="submit" value="Let Me In" />
            </p>
        </div>
    </div>
}